function switchTab(tab) {
  activeTab = tab;

  document.querySelectorAll(".tab").forEach(btn => {
    btn.classList.remove("active");
  });

  event.target.classList.add("active");

  document.getElementById("results").innerHTML =
    `<p style="opacity:0.7">Search to see ${tab} results...</p>`;
}
<button class="tab active" onclick="switchTab('all', this)">All</button>
<button class="tab" onclick="switchTab('images', this)">Images</button>
<button class="tab" onclick="switchTab('wiki', this)">Wiki</button>
<button class="tab" onclick="switchTab('ai', this)">AI</button>
